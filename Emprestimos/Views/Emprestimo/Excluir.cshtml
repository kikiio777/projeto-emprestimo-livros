@model EmprestimosModel
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
}
@{
    ViewData["title"] = "Excluir Emprestimo";
}


<div class="container bg-dark  p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light ">Excluir emprestimos</h1>
    </div>



    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <h2 class="text-light text-center">Tem certeza que deseja excluiro registro abaixo?</h2>

        <div class="mb-2 w-50">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="quem esta recebendo o livro ?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-2 w-50">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem é o fornecedor ?" disabled />
            <span class="text-danger" asp-validation-for="Fornecedor"></span>

        </div>

        <div class="mb-2 w-50">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual o livro emprestado ?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>

        </div>

        <div class="d-flex gap-5 mt-5 w-50">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>



    </form>
</div>